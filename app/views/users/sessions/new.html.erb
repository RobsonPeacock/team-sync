<% content_for :layout, 'devise' %>

<h2 class="fw-bold mb-2 text-uppercase">Login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="mb-4">
    <%= f.label :email, class: 'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: 'form-label' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-lg' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'form-label' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<div class="mt-3">
  <%= render "users/shared/links" %>
</div>
